@model PagedResultDto<InquiryDto>
@{
    ViewData["Title"] = "Inquiries Management";
}

<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0 fw-bold text-primary">Filter Inquiries</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-10">
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    @foreach (InquiryStatus status in Enum.GetValues(typeof(InquiryStatus)))
                    {
                        <option value="@status" selected="@(ViewBag.SelectedStatus?.ToString() == status.ToString())">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-filter me-1"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h6 class="mb-0 fw-bold text-primary">
            Inquiries List
            <span class="badge bg-secondary ms-2">@Model.TotalCount total</span>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Property</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Any())
                    {
                        @foreach (var inquiry in Model.Items)
                        {
                            <tr>
                                <td><span class="badge bg-light text-dark">#@inquiry.Id</span></td>
                                <td>
                                    <div>
                                        <div class="fw-bold">@inquiry.UserName</div>
                                        <small class="text-muted">@inquiry.UserEmail</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 200px;" title="@inquiry.PropertyTitle">
                                        @inquiry.PropertyTitle
                                    </div>
                                </td>
                                <td>@inquiry.PhoneNumber</td>
                                <td>
                                    @{
                                        var statusClass = inquiry.Status switch
                                        {
                                            InquiryStatus.New => "primary",
                                            InquiryStatus.Contacted => "info",
                                            InquiryStatus.Visiting => "warning",
                                            InquiryStatus.Pending => "secondary",
                                            InquiryStatus.Closed => "success",
                                            InquiryStatus.Cancelled => "danger",
                                            _ => "secondary"
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@inquiry.Status</span>
                                </td>
                                <td>@inquiry.RequestDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@inquiry.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (inquiry.Status == InquiryStatus.New)
                                        {
                                            <form asp-action="MarkAsContacted" asp-route-id="@inquiry.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Mark as Contacted">
                                                    <i class="bi bi-telephone-check"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <i class="bi bi-inbox fs-1 text-muted d-block mb-2"></i>
                                No inquiries found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-status="@ViewBag.SelectedStatus">
                            Previous
                        </a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-pageNumber="@i"
                               asp-route-status="@ViewBag.SelectedStatus">
                                @i
                            </a>
                        </li>
                    }
                    <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" 
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-status="@ViewBag.SelectedStatus">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
