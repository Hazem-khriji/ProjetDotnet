@{
    ViewData["Title"] = "Compose Message";
    var users = ViewBag.Users as List<UserDto>;
    var receiverId = ViewBag.ReceiverId as string;
}

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Compose" class="btn btn-primary">
                        <i class="bi bi-pencil-square me-1"></i> Compose
                    </a>
                    <a asp-action="Inbox" class="btn btn-outline-secondary">
                        <i class="bi bi-inbox me-1"></i> Inbox
                    </a>
                    <a asp-action="Sent" class="btn btn-outline-secondary">
                        <i class="bi bi-send me-1"></i> Sent
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-pencil-square me-2"></i>New Message
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Send" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="mb-3">
                        <label class="form-label">To <span class="text-danger">*</span></label>
                        <select name="ReceiverId" class="form-select" required>
                            <option value="">Select recipient...</option>
                            @if (users != null)
                            {
                                @foreach (var user in users)
                                {
                                    <option value="@user.Id" selected="@(user.Id == receiverId)">
                                        @user.FullName (@user.Email)
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Subject <span class="text-danger">*</span></label>
                        <input type="text" name="Subject" class="form-control" placeholder="Enter subject" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Message <span class="text-danger">*</span></label>
                        <textarea name="Content" class="form-control" rows="10" placeholder="Write your message here..." required></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Inbox" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send me-1"></i> Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
