@model UserDto
@{
    ViewData["Title"] = "User Details";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body text-center">
                <div class="bg-primary rounded-circle text-white d-inline-flex align-items-center justify-content-center mb-3" 
                     style="width: 80px; height: 80px; font-size: 2rem;">
                    @(Model.FirstName?.Length > 0 ? Model.FirstName[0].ToString().ToUpper() : "U")
                </div>
                <h5 class="mb-1">@Model.FullName</h5>
                <p class="text-muted mb-2">@Model.Email</p>
                @{
                    var roleClass = Model.Role switch
                    {
                        "Admin" => "danger",
                        "Agent" => "primary",
                        _ => "secondary"
                    };
                }
                <span class="badge bg-@roleClass mb-3">@Model.Role</span>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0 fw-bold">Statistics</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Properties</span>
                    <span class="badge bg-info">@Model.PropertyCount</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Inquiries</span>
                    <span class="badge bg-warning">@Model.RequestCount</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Joined</span>
                    <span>@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0 fw-bold">User Information</h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="text-muted small">First Name</label>
                        <p class="fw-bold">@Model.FirstName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Last Name</label>
                        <p class="fw-bold">@Model.LastName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Email Address</label>
                        <p class="fw-bold">@Model.Email</p>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted small">Phone Number</label>
                        <p class="fw-bold">@(Model.PhoneNumber ?? "Not provided")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0 fw-bold">Actions</h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <form asp-action="UpdateRole" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <label class="form-label">Change Role</label>
                            <div class="input-group">
                                <select name="role" class="form-select">
                                    @foreach (var role in (IEnumerable<SelectListItem>)ViewBag.Roles)
                                    {
                                        <option value="@role.Value" selected="@role.Selected">@role.Value</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Account Status</label>
                        <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            @if (Model.IsActive)
                            {
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="bi bi-x-circle me-1"></i> Deactivate Account
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-circle me-1"></i> Activate Account
                                </button>
                            }
                        </form>
                    </div>
                </div>
                <hr />
                <div class="d-flex gap-2">
                    <a asp-controller="Messages" asp-action="Compose" asp-route-receiverId="@Model.Id" class="btn btn-outline-primary">
                        <i class="bi bi-envelope me-1"></i> Send Message
                    </a>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i> Delete User
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete user "<strong>@Model.FullName</strong>"? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
