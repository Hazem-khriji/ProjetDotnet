@model UserDto
@{
    ViewData["Title"] = "Edit User";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i> Back to List
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0 fw-bold">Edit User: @Model.FullName</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="bg-primary rounded-circle text-white d-inline-flex align-items-center justify-content-center mb-3" 
                         style="width: 80px; height: 80px; font-size: 2rem;">
                        @(Model.FirstName?.Length > 0 ? Model.FirstName[0].ToString().ToUpper() : "U")
                    </div>
                    <h5 class="mb-1">@Model.FullName</h5>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <form asp-action="UpdateRole" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select">
                            @foreach (var role in (IEnumerable<SelectListItem>)ViewBag.Roles)
                            {
                                <option value="@role.Value" selected="@role.Selected">@role.Value</option>
                            }
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Update Role
                        </button>
                    </div>
                </form>

                <hr />

                <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    @if (Model.IsActive)
                    {
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-x-circle me-1"></i> Deactivate Account
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle me-1"></i> Activate Account
                        </button>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
